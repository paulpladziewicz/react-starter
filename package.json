{
  "name": "react-starter",
  "version": "1.0.0",
  "description": "A starting point for React projects using TypeScript.",
  "main": "index.tsx",
  "scripts": {
    "build": "rimraf dist && npx webpack build --mode=production",
    "start": "rimraf dist && npx webpack serve --mode=development",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|tsx|json)\"",
    "format": "npm run prettier -- --write && npm run lint -- --fix",
    "check-format": "npm run prettier -- --list-different",
    "check-types": "tsc --project tsconfig.json",
    "validate": "npm-run-all --parallel test check-format lint check-types husky",
    "test": "jest",
    "husky": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulpladziewicz/react-starter.git"
  },
  "keywords": [
    "typescript",
    "react",
    "starter"
  ],
  "author": "Paul Pladziewicz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/paulpladziewicz/react-starter/issues"
  },
  "homepage": "https://github.com/paulpladziewicz/react-starter#readme",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "babel-loader": "^10.0.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
